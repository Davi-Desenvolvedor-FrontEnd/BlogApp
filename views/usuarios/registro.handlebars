{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <form action="" method="post" class="d-flex flex-column gap-2 py-2 px-4">
      <label for="nome">Nome</label>
      <input class="form-control" type="text" name="nome" />
      <label for="email">Email</label>
      <input class="form-control" type="email" name="email" />
      <label for="senha">Senha</label>
      <input class="form-control" type="password" id="senha" name="senha" minlength="8" />
      <label for="senha2">Repita a Senha</label>
      <input class="form-control" type="password" id="senha2" name="senha2" minlength="8" />
      <div class="form-check mb-2">
        <input class="form-checket-input" type="checkbox" name="checkbox" id="checkbox" onclick="MostarSenha()">
        <label class="form-checket-label" for="checkbox">Mostrar senha</label>
      </div>
      <button type="submit" class="btn btn-success align-self-start mt-4">Criar
        conta</button>
    </form>
  </div>
</div>
<script>
  function MostarSenha() {
    const camposSenha = [document.getElementById('senha'),document.getElementById('senha2')]
    camposSenha.forEach(campo=>{
        campo.type = campo.type === "password"?"text":"password"
    })
  }
</script>