{{#each erros}}
<div class="alert alert-danger">
    {{texto}}
</div>
{{else}}
{{/each}}
<div class="container">
    <div class="card col-12 col-sm-10 col-md-6 mx-auto p-3">
        <div class="card-body">
            <form action="/adm/categorias/nova" class="d-flex flex-column gap-3" method="post">
                <label class="form-label" for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome da categoria">
                <label class="form-label" for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" class="form-control" placeholder="Slug da categoria">
                <button type="submit" class="btn btn-success mt-4 w-100">Criar Categoria</button>
            </form>
        </div>
    </div>
</div>