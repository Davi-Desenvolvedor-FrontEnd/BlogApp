{{#each erros}}
<div class="alert alert-danger">
    {{texto}}
</div>
{{else}}
{{/each}}
<div class="card">
    <form action="/adm/categorias/edit" class="d-flex flex-column p-4 gap-3" method="post">
    <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="nome">Nome: </label>
        <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome da categoria" value="{{categoria.nome}}">
        <label for="slug">Slug: </label>
        <input type="text" id="slug" name="slug" class="form-control" placeholder="Slug da categoria" value="{{categoria.slug}}">
        <button type="submit" class="btn btn-success mt-4 align-self-start">Editar Categoria</button>
    </form>
</div>