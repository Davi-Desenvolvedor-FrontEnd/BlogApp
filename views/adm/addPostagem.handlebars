{{#each erros}}
<div class="alert alert-danger">
    {{text}}
</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/adm/postagens/nova" method="post" class="gap-2 d-flex flex-column">
            <label for="titulo">Título</label>
            <input type="text" class="form-control" name="titulo">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" name="slug">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control" name="descricao">
            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" name="conteudo" class="form-control" style="resize: none;" rows="3"></textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" name="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="">Nenhuma categoria</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4 align-self-start">Criar postagem</button>
        </form>
    </div>
</div>